<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvSolution"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""
        android:textSize="32dp"
        android:textAlignment="textEnd"
        android:layout_above="@+id/tvResult"
        android:layout_margin="16dp"/>


    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="64dp"
        android:textAlignment="textEnd"
        android:layout_above="@+id/llButtons"
        android:layout_margin="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F1E9E9"
        android:paddingVertical="16dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/llButtons">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

           <com.google.android.material.button.MaterialButton
               android:id="@+id/btnC"
               android:layout_width="70dp"
               android:layout_height="70dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="C"
               android:layout_margin="12dp"
               android:textSize="32sp"
               android:backgroundTint="#ED4D41"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOpenBracket"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="("
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:backgroundTint="#A4A9AA"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCloseBracket"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text=")"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:backgroundTint="#A4A9AA"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDivide"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="/"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:backgroundTint="#EFA942"/>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="7"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:backgroundTint="#4DD6E8"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="8"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:backgroundTint="#4DD6E8"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="9"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:backgroundTint="#4DD6E8"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMultiply"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="*"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:backgroundTint="#EFA942"/>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="4"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:backgroundTint="#4DD6E8"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="5"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:backgroundTint="#4DD6E8"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="6"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:backgroundTint="#4DD6E8"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAdd"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="+"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:backgroundTint="#EFA942"/>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="1"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:backgroundTint="#4DD6E8"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="2"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:backgroundTint="#4DD6E8"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="3"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:backgroundTint="#4DD6E8"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMinus"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="-"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:backgroundTint="#EFA942"/>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAC"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="AC"
                android:layout_margin="12dp"
                android:textSize="19sp"
                android:backgroundTint="#ED4D41"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn0"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="0"
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:backgroundTint="#4DD6E8"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDot"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="."
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:backgroundTint="#4DD6E8"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEqual"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="="
                android:layout_margin="12dp"
                android:textSize="32sp"
                android:backgroundTint="#EFA942"/>




        </LinearLayout>




    </LinearLayout>

</RelativeLayout>